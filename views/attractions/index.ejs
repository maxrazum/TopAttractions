<% layout('layouts/boilerplate') %>

    <div id="cluster-map"></div>
    <div class="container mt-5 mb-5">

        <h1>All Attractions</h1>

        <% for (let attraction of attractions) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="card-img-top" id="indexImage" alt="" src="<%= attraction.images[0].url %>">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= attraction.title.substring(0, 50) %>
                            </h4>
                            <p class="card-text text-muted">
                                <%= attraction.location.substring(0, 50) %>
                            </p>
                            <h6 class="card-text">
                                <%= attraction.description.substring(0, 250) %>
                            </h6>
                            <a class="btn btn-primary mt-4" href="/attractions/<%= attraction._id %>">View</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const attractions = { features: <%- JSON.stringify(attractions) %>}
    </script>

    <script src="/js/clusterMap.js"></script>