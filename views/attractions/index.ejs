<% layout('layouts/boilerplate') %>

    <div id="map" style="width: 100%; height: 500px"></div>

    <h1>All Attractions</h1>
    <div>
        <a href="/attractions/new">Add Attraction</a>
    </div>

    <% for (let attraction of attractions) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= attraction.images[0].url %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= attraction.title %>
                        </h5>
                        <h5 class="card-text">
                            <%= attraction.description %>
                        </h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <% attraction.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/attractions/<%= attraction._id %>">View <%= attraction.title
                                %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
            </script>

            <script src="/js/clusterMap.js"></script>